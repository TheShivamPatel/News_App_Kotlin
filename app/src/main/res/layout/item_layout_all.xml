<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/empty_image_holder" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="7dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/news_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/frank_ruhl_libre_medium"
                android:maxLines="2"
                android:text="@string/sample_txt"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/news_source_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/source_of_news"
                    android:textSize="13sp"
                    android:textColor="@color/mediumGray"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/share_image_btn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_share_24"
                    app:tint="@color/mediumGray"
                    android:layout_marginStart="7dp"
                    android:layout_weight="3"/>

                <ImageView
                    android:id="@+id/save_image_btn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/outline_bookmark_border_24"
                    app:tint="@color/mediumGray"
                    android:layout_weight="3"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/lightGray" />


</LinearLayout>